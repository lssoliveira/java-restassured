{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "discountPercentage": {
            "type": "number"
          },
          "rating": {
            "type": "number"
          },
          "stock": {
            "type": "integer"
          },
          "tags": {
            "type": "array"
          },
          "category": {
            "type": "string"
          },
          "thumbnail": {
            "type": "string"
          },
          "images": {
            "type": "array"
          }
        },
        "required": [
          "id",
          "title",
          "description",
          "price",
          "discountPercentage",
          "rating",
          "stock",
          "tags",
          "category",
          "thumbnail",
          "images"
        ]
      }
    },
    "total": {
      "type": "integer"
    },
    "skip": {
      "type": "integer"
    },
    "limit": {
      "type": "integer"
    }
  },
  "required": ["products", "total", "skip", "limit"]
}
